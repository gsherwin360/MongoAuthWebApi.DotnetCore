{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "mongo_auth"
  },
  "Jwt": {
    "SecretKey": "YourSecretKeyHere", // This should be a strong and secret key for production.
    "ValidIssuer": "YourIssuerHere", // This is the entity that issues the JWT.
    "ValidAudience": "YourAudienceHere", // This is the intended audience for the JWT.
    "TokenValidityInMinutes": 30 // The time in minutes for which the token is valid.
  }
}